<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_blue"
    android:orientation="vertical"
    tools:context=".SelectionModeActivity">


    <LinearLayout
        android:id="@+id/linear_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:onClick="onBtnRoll"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn"
            android:text="@string/roll" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:onClick="onBtnSpeed"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn"
            android:text="@string/speed" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:onClick="onBtnForce"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn"
            android:text="@string/force" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:onClick="onBtnOther"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn"
            android:text="@string/other" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="@color/orange"
        android:text="@string/input_data"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view">

        <EditText
            android:width="1dp"
            android:id="@+id/edt_mass"
            android:hint="@string/hint_edtmass"
            android:backgroundTint="@color/light_orange"
            android:textColor="@color/light_orange"
            android:textColorHint="@color/light_orange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="date" />

        <EditText
            android:width="1dp"
            android:id="@+id/edt_rad"
            android:hint="@string/hint_edtrad"
            android:backgroundTint="@color/light_orange"
            android:textColor="@color/light_orange"
            android:textColorHint="@color/light_orange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="date" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>