<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_press_btn"/>
            <corners android:topRightRadius="15dp" android:bottomRightRadius="25dp"/>
        </shape>
    </item>

    <item
        android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_btn"/>
            <corners android:topRightRadius="15dp" android:bottomRightRadius="25dp"/>
        </shape>
    </item>

</selector>